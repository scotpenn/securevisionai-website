{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://securevision.ai/schemas/navigation.json",
  "title": "Navigation Configuration",
  "description": "Schema for SecureVision AI website navigation configuration",
  "type": "object",
  "required": ["navigation", "meta"],
  "properties": {
    "navigation": {
      "type": "object",
      "required": ["main"],
      "properties": {
        "main": {
          "type": "object",
          "patternProperties": {
            "^(en|fr)$": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "label", "href", "type"],
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
                    "description": "Unique identifier using kebab-case"
                  },
                  "label": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Display text for the navigation item"
                  },
                  "href": {
                    "type": "string",
                    "pattern": "^/.*",
                    "description": "Absolute URL path starting with /"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["link", "dropdown"],
                    "description": "Navigation item type"
                  },
                  "items": {
                    "type": "array",
                    "description": "Dropdown items (required when type is 'dropdown')",
                    "items": {
                      "type": "object",
                      "required": ["label", "href", "category"],
                      "properties": {
                        "label": {
                          "type": "string",
                          "minLength": 1,
                          "description": "Display text for dropdown item"
                        },
                        "href": {
                          "type": "string", 
                          "pattern": "^/.*",
                          "description": "Absolute URL path starting with /"
                        },
                        "category": {
                          "type": "string",
                          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
                          "description": "Category identifier in kebab-case"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["version", "last_updated", "description", "supported_languages"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version number"
        },
        "last_updated": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$", 
          "description": "ISO date format YYYY-MM-DD"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Brief description of this configuration"
        },
        "supported_languages": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z]{2}$"
          },
          "minItems": 1,
          "description": "List of supported language codes"
        },
        "notes": {
          "type": "string",
          "description": "Optional additional notes"
        }
      }
    }
  },
  "if": {
    "properties": {
      "navigation": {
        "properties": {
          "main": {
            "patternProperties": {
              "^(en|fr)$": {
                "contains": {
                  "properties": {
                    "type": {
                      "const": "dropdown"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "then": {
    "properties": {
      "navigation": {
        "properties": {
          "main": {
            "patternProperties": {
              "^(en|fr)$": {
                "items": {
                  "if": {
                    "properties": {
                      "type": {
                        "const": "dropdown"
                      }
                    }
                  },
                  "then": {
                    "required": ["items"],
                    "properties": {
                      "items": {
                        "minItems": 1
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}